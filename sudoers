# {{ ansible_managed }}

# Setup sudoreplay
Defaults log_output
Defaults logfile=/var/log/sudo.log
Defaults!/usr/bin/sudoreplay !log_output
Defaults!/usr/local/bin/sudoreplay !log_output
Defaults!/sbin/reboot !log_output
# DON'T FORGET ROTATION OF SUDO.LOG
# put in /etc/newsyslog.conf:
#/var/log/sudo.log 	root:wheel 	600  10	   100	*     JC

# set RCS name to user that called sudo
Defaults>root    !set_logname

# Default Preferences
root ALL=(ALL) ALL

%wheel ALL=(ALL) ALL

# Insecure but nice for my hands.
matt ALL=(ALL) NOPASSWD: ALL

#emergency backup
{{ periodic_user }} ALL=(ALL) /usr/local/sbin/visudo

## Read drop-in files from /usr/local/etc/sudoers.d
## (the '#' here does not indicate a comment)
#includedir /usr/local/etc/sudoers.d
